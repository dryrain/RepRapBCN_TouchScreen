func ANTimer0()
    ANITIMER(0) ;
endfunc

func ANITIMER(var an)
    object := oAniButtons + *(ANi[an]+IPD_OBJVidx) ;
    if (ANd[an]) // pen is down, increment frame
        ANp[an]++ ;
    else
        ANp[an]-- ;
    endif
    if (ANp[an] == *(ANi[an]+IPD_P3))           // complated downward movement?
        if (*(ANi[an]+IPD_P1))                  // for momentary we need to start up cycle
            ANd[an] := 0 ;
            sys_SetTimer(TIMER7-an, ANt[an]) ;
        else                                    // otherwise update object as down
            inputtype := tAniButton ;
            UpdateObjects(ANp[an]) ;
            ANi[an] := 0 ;                      // free timer
        endif
    else if(ANp[an])                            // in the middle of an animation, just show it
        img_SetWord(hndl, *(object), IMAGE_INDEX, ANp[an]);
        img_Show(hndl, *(object));      // only shows on current form
        sys_SetTimer(TIMER7-an, ANt[an]) ;
    else
        if ((*(ANi[an]+IPD_P1)) || (*(ANi[an]+IPD_P2) == -1))                   // for momentary we only report 'up'
            inputtype := tAniButton ;
            UpdateObjects(ANp[an]) ;
        else                                    // else just show final 'position'
            img_SetWord(hndl, *(object), IMAGE_INDEX, ANp[an]);
            img_Show(hndl, *(object));
        endif
        ANi[an] := 0 ;                       // free timer
    endif
 endfunc
